<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minions del Mar</title>
    <%- include ("partials/head") %>
    <link rel="shortcut icon" href="minion_eye.ico" type="image/x-icon">
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="darkly.css">
</head>

<body>
    <%- include ("partials/sidenav") %>
    <div class="main p-4">
        <%- include ("partials/navigation") %>
        <div class="container">
            <div class="row">


                <div id="liveAlertPlaceholder">
                    <!-- <div class="alert alert-dismissible alert-success">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong>Well done!</strong> You successfully read <a href="#" class="alert-link">this important alert message</a>.
                    </div> -->
                </div>
    

                <div class="col-sm-9">
                    <% let valor=0 %>
                    <div class="container row row-cols-1 row-cols-md-3 g-4">
                        <% images.forEach(function (image) { %>
                            <% for( let i=0; i < image.veces; i++ ) { %>
                                <% valor=valor + image.precio %>
                                <div class="card border-primary animate__animated animate__rubberBand"
                                    style="max-width: 16rem;">
                                    <div class="card-header"><%= image.title %></div>
                                    <img src="<%= image.path %>" class="img-fluid rounded-start" alt="...">
                                    <div class="card-body text-primary">
                                        <p class="card-text">$<%= image.precio %></p>
                                        <a href="/image/<%= image._id %>/remove" class="btn btn-danger d-md-block">Sacar</a>
                                    </div>
                                </div>
                            <% } %>
                        <% }) %>
                    </div>
                </div>

                <div class="col-sm-3">                   
                    <div class="mb-3">
                        <h4 class="mt-3">Orden:</h4>

                        <form action="/historial" method="POST" enctype="multipart/form-data">                        
                            <div class="input-group mb-3">                         
                                <div class="input-group mb-3">
                                    <span class="input-group-text">$</span>
                                    <input name="valor" value=<%= valor %> type="text" id="orden" class="form-control" aria-label="Amount (to the nearest dollar)">
                                </div>    
                                <div class="d-grid gap-2">
                                    <a href="/clear" class="btn btn-primary btn-sm" type="button">Nueva</a>
                                    <button id="btnGuardar" class="btn btn-success" type="submit">Guardar</button>
                                </div>
                            </div>
                        </form>

                        <div class="mb-3">
                            <label>Diferencia($):</label>
                            <h4 id="diferencia">0</h4>
                        </div>
                        <div class="mb-3">
                            <label>Pagado($):</label>
                            <h4 id="pagado">0</h4>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-secondary" type="button" id="btnBorrarCuenta">Borrar</button>
                            </div>
                            <div class="border border-primary p-3 rounded-3">
                                <button type="button" class="btn btn-warning btn-sm mb-1" id="btnM20">$20</button>
                                <button type="button" class="btn btn-warning btn-sm mb-1" id="btnM50">$50</button>
                                <button type="button" class="btn btn-warning btn-sm mb-1" id="btnM100">$100</button>
                                <button type="button" class="btn btn-warning btn-sm mb-1" id="btnM200">$200</button>
                                <button type="button" class="btn btn-warning btn-sm mb-1" id="btnM500">$500</button>
                                <button type="button" class="btn btn-warning btn-sm mb-1" id="btnM1k">$1000</button>
                                <button type="button" class="btn btn-primary btn-sm mb-1" id="btn1k">$1.000</button>
                                <button type="button" class="btn btn-primary btn-sm mb-1" id="btn2k">$2.000</button>
                                <button type="button" class="btn btn-primary btn-sm mb-1" id="btn5k">$5.000</button>
                                <button type="button" class="btn btn-primary btn-sm mb-1" id="btn10k">$10.000</button>
                                <button type="button" class="btn btn-primary btn-sm mb-1" id="btn20k">$20.000</button>
                                <button type="button" class="btn btn-primary btn-sm mb-1" id="btn50k">$50.000</button>
                                <button type="button" class="btn btn-primary btn-sm mb-1" id="btn100k">$100.000</button>
                            </div>              
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include ("partials/footer") %>
</html>